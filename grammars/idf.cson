#   - http://manual.macromates.com/en/language_grammars

'scopeName': 'text.idf'
'name': 'IDF'
'fileTypes': [
    'idf'
]
'foldingStartMarker': '^[^!]*,'
'foldingStopMarker': '^.*;.*$'

'patterns': [
    {
        'match': '!.*$'
        'name': 'comment'
    }
    {
        'name': 'meta.input'
        'begin': '^[^!]*,'
        'end': '^[^!]*;'
    }
]
